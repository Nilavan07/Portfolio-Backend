doctype html
html
  head
    title Edit Skill
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }
      .container {
        background: white;
        padding: 25px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        width: 420px;
      }
      h1 {
        text-align: center;
        color: #333;
        margin-bottom: 15px;
      }
      label {
        display: block;
        margin-top: 12px;
        font-weight: bold;
        color: #555;
      }
      input, select {
        width: 100%;
        padding: 12px;
        margin-top: 6px;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 15px;
        background-color: #fff;
      }
      .button-group {
        display: flex;
        gap: 10px;
        margin-top: 18px;
      }
      .button-group button, .button-group a {
        flex: 1;
        padding: 12px;
        text-align: center;
        font-size: 17px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
      }
      button {
        background: #007bff;
        color: white;
        border: none;
        cursor: pointer;
        transition: background 0.3s;
      }
      button:hover {
        background: #0056b3;
      }
      a {
        background: #6c757d;
        color: white;
      }
      a:hover {
        background: #5a6268;
      }
  body
    .container
      h1 ‚úè Edit Skill

      form(method="POST" action=`/admin/skills/edit/${skill._id}`)
        label(for="name") Skill Name:
        input(type="text" name="name" value=skill.name required)

        label(for="proficiency") Proficiency Level:
        select(name="proficiency" required)
          option(value="Beginner" selected=(skill.proficiency === "Beginner")) Beginner
          option(value="Intermediate" selected=(skill.proficiency === "Intermediate")) Intermediate
          option(value="Advanced" selected=(skill.proficiency === "Advanced")) Advanced
          option(value="Expert" selected=(skill.proficiency === "Expert")) Expert

        .button-group
          button(type="submit") Save Changes
          a(href="/admin") Cancel
